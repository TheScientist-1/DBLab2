@model IEnumerable<draft.Teacher>

@{
    ViewData["Title"] = "Query4";
}


 <p>Search Query:</p>
  <p>Знайти всіх викладачів, що працюють на кафедрі з назвою: {x}</p>
 <p>Find all teachers working in the department with the name: {x}</p>
 <p>SQL Query:</p>
         <p>
            <code>
                SELECT Teacher.* <br />
                FROM Teacher <br />
                INNER JOIN Department ON Teacher.DepartmentId = Department.DepartmentId <br />
                WHERE Department.Name = {x}
            </code>
        </p>

<p>
    <a asp-controller="Queries" asp-action="Index" class="btn btn-secondary">Back to Index</a>
</p>

@if (Model != null && Model.Any())
{
        <table class="table">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    
                </tr>
            </thead>
            <tbody>
            @foreach (var teacher in Model)
            {
                        <tr>
                            <td>
                        @teacher.FirstName
                            </td>
                            <td>
                        @teacher.LastName
                            </td>
                            
                        </tr>
            }
            </tbody>
        </table>
}
else
{
        <p>No results found.</p>
}
