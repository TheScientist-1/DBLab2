@model IEnumerable<draft.Teacher>

@{
    ViewData["Title"] = "Query8";
}

<p>Search Query:</p>
<p>Знайти вчителів, які викладають тільки курси з кількістю кредитів: {creditNumber}</p>

<p>Find teachers who teach only courses with credits number: {creditNumber}</p>
<p>SQL Query:</p>
<p>
    <code>
        SELECT * <br />
        FROM Teacher <br />
        WHERE NOT EXISTS ( <br />
        &nbsp;&nbsp;&nbsp;&nbsp;SELECT * <br />
        &nbsp;&nbsp;&nbsp;&nbsp;FROM Course <br />
        &nbsp;&nbsp;&nbsp;&nbsp;WHERE Course.CreditsNumber <> @Model <br />
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;AND Course.CourseId IN ( <br />
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;SELECT CourseAssignment.CourseId <br />
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;FROM CourseAssignment <br />
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;WHERE CourseAssignment.TeacherId = Teacher.Id <br />
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;) <br />
        &nbsp;&nbsp;&nbsp;&nbsp;) <br />
        ;
    </code>
</p>
<p>
    <a asp-controller="Queries" asp-action="Index" class="btn btn-secondary">Back to Index</a>
</p>

@if (Model != null && Model.Any())
{
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Teacher ID
                    </th>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Hire Date
                    </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var teacher in Model)
            {
                        <tr>
                            <td>
                        @teacher.Id
                            </td>
                            <td>
                        @teacher.FirstName
                            </td>
                            <td>
                        @teacher.LastName
                            </td>
                            <td>
                        @teacher.HireDate.ToShortDateString()
                            </td>
                        </tr>
            }
            </tbody>
        </table>
}
else
{
        <p>No results found.</p>
}
